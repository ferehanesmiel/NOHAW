
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    // Check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Check if the requester is the owner of the document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Fetch the user's profile document safely
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Check if the user exists and has the 'ADMIN' role
    function isAdmin() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             getUserData().role == 'ADMIN';
    }

    // --- Collection Rules ---

    // 1. Settings (Hero content, etc.)
    // READ: Public
    // WRITE: Admin only
    match /settings/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 2. Courses Collection
    // READ: Public
    // WRITE: Admin only
    match /courses/{courseId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 3. News Collection
    // READ: Public
    // WRITE: Admin only
    match /news/{newsId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 4. Testimonials Collection
    // READ: Public
    // WRITE: Admin can do anything. Users can manage their own testimonials.
    match /testimonials/{testimonialId} {
      allow read: if true;
      
      // Create: User must be signed in and author name must match their profile
      allow create: if isAdmin() || (
        isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        request.resource.data.author == getUserData().username
      );
      
      // Update/Delete: User must own the testimonial (author matches)
      allow update, delete: if isAdmin() || (
        isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        resource.data.author == getUserData().username
      );
    }

    // 5. Users Collection
    // READ/WRITE: Admin can access all. Users can only access their own document.
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }
  }
}
