
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    // Check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Get the User document of the requester
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Check if the requester is an Admin
    function isAdmin() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             getUserData().role == 'ADMIN';
    }

    // Check if the requester is accessing their own data
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- Collection Rules ---

    // 1. Settings (Hero content, etc.)
    // Public read (for landing page), Admin write
    match /settings/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 2. Users Collection
    // Admin can read/write all. Users can read/write their own profile.
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }

    // 3. Courses Collection
    // Public read (catalog), Admin write
    match /courses/{courseId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 4. News Collection
    // Public read, Admin write
    match /news/{newsId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 5. Testimonials Collection
    // Public read. 
    // Admin can write any. 
    // Users can create/update/delete if the 'author' field matches their username.
    match /testimonials/{testimonialId} {
      allow read: if true;
      
      allow create: if isAdmin() || (
        isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        request.resource.data.author == getUserData().username
      );
      
      allow update: if isAdmin() || (
        isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        resource.data.author == getUserData().username && 
        request.resource.data.author == getUserData().username
      );
      
      allow delete: if isAdmin() || (
        isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        resource.data.author == getUserData().username
      );
    }
  }
}
